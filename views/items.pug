extends layout

block content 

  div.items-page
    div.title
      h1= title + ' ' + sumOfItems
      div.decor

    div.category
      h2 Bags/Carriers: #{bagCount}

      br
      span 
        a.add(href='/bags/create') Add New
      if bags.length > 0
        each bag in bags 
          a(href=bag.url)
            div.item
              div.info
                span #[strong Name:] !{bag.name}
                br
                span #[strong Price:] $!{bag.price}
                br
                span #[strong Number-in-Stock:] !{bag.number_in_stock}
              img(src='/images/carrier.png', alt='pet carrier')
      else 
        p You haven't added any bags or carriers yet.

