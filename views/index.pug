extends layout

block content

    h1= title
    
    if user
      if error 
        p Error getting the content.
      else 
        h2 Welcome #{user.username}!
        h3 You added #{sumOfItems} items to the stock.
        h3 
          a(href='/items') Your items
        h3 Category:
          ul 
            li 
              a(href='/bags') #[strong Bags/Carriers]
            li
              a(href='beds') #[strong Beds]
            li
              a(href='/clothings') #[strong Clothing]
            li
              a(href='/foods') #[strong Food:]
            li
              a(href='/hygiene-stuffs') #[strong Hygiene]
            li
              a(href='/leashes') #[strong Leashes]
            li
              a(href='/scratching-posts') #[strong Scratching Posts]
            li
              a(href='/toys') #[strong Toys]

    else
      a(href='/new-user') New User 
      br
      a(href='/login') Login
