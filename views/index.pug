          |  !{data.food_count}
        li 
          a(href='/hygiene-stuffs') #[strong Hygiene:]
          |  !{data.hygienestuff_count}
        li 
          a(href='/leashes') #[strong Leash:]
          |  !{data.leash_count}
        li 
          a(href='/scratching-posts') #[strong Scratching Post:]
          |  !{data.scratchingpost_count}
