extends ../layout

block content 

  div.details-page
    div.title
      h1= title
      div.decor

    if error 
      p= error 
    else 
      div.details
        p 
          span #[strong Username:]
          |  !{bed.user.username}
        p 
          span #[strong Category:]
          |  !{bed.category}
        p 
          span #[strong Name:]
          |  !{bed.name}
        p 
          span #[strong Pet:]
          |  !{bed.pet}
        p 
          span #[strong Size:]
          |  !{bed.size}
        p 
          span #[strong Color:]
          |  !{bed.color}
        p 
          span #[strong Description:]
          |  !{bed.description}
        p
          span #[strong Price:]
          |  $!{bed.price}
        p 
          span #[strong Number-in-Stock:]
          |  !{bed.number_in_stock}
        p 
          span #[strong Date added:]
          |  !{bed.date_added_formatted}

        if bed.user.username === user.username 
          div.form-container
            form(method='POST', action='')
              input#id(type='hidden', name='id', required='true', value=bed._id)
              button(type='submit') Delete 

            form(method='GET', action='/beds/update/' + bed._id)
              input#bed_id(type='hidden', name='bed_id', required='true', value=bed._id)
              input#bed_pet(type='hidden', name='bed_pet', required='true', value=bed.pet)
              button(type='submit') Edit