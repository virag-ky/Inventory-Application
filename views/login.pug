extends layout 

block content 

  div.login-page

    div.title
      h1 Login
      div.decor

    if errorMsg 
      p.error= errorMsg

    if message 
      p.info= message

    form(method='POST', id='login-form' action='')
      label(for='username') Username: 
      input#username(type='text', name='username', autocomplete='username', required, autofocus)
      label(for='current-password') Password: 
      input#current-password(type='password', name='password', autocomplete='current-password', required)

    div.login-container
      button(type='submit', form='login-form') Login
      a(href='/') 
        button Go Back