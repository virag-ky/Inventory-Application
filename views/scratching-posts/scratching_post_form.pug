extends ../layout

block content 

  h1= title 

  form(method='POST', action='', style='display:flex;flex-direction:column;width:500px')
    label(for='username') Username: 
    input#username(type='text', name='username', value=user.username, readonly)
    label(for='pet') Pet: 
    input#pet(type='text', name='pet', value='Cat', readonly)
    label(for='name') Name: 
    input#name(type='text', name='name', value='Scratching post', readonly)
    label(for='color') Color: 
    select#color(type='color', name='color')
      option(value='Beige', selected=(undefined === scratching_post ? undefined : (scratching_post.color === 'Beige' ? 'selected' : undefined))) Beige 
      option(value='White', selected=(undefined === scratching_post ? undefined : (scratching_post.color === 'White' ? 'selected' : undefined))) White 
      option(value='Brown', selected=(undefined === scratching_post ? undefined : (scratching_post.color === 'Brown' ? 'selected' : undefined))) Brown
      option(value='Black', selected=(undefined === scratching_post ? undefined : (scratching_post.color === 'Black' ? 'selected' : undefined))) Black 
    label(for='description') Description:
    textarea#description(type='textarea', name='description', placeholder='A white scratching post for cats.') #{undefined === scratching_post ? '' : scratching_post.description}
    label(for='price') Price/$:
    input#price(type='number', name='price', step='0.01', placeholder='5.00', value=(undefined === scratching_post ? '' : parseFloat(scratching_post.price).toFixed(2)), required)
    label(for='quantity') Quantity: 
    input#quantity(type='number', name='quantity', placeholder='1', value=(undefined === scratching_post ? '' : scratching_post.number_in_stock), required)
    button(type='submit') Submit 

  if errors 
    ul 
      each error in errors 
        li!= error.msg